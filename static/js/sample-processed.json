{
"description": "transform Plone's buttons into bootstrap2 buttons",
"public": true,
"unique_id": "d54e00ac743b",
"created_at": "2014-11-17T02:23:06Z",
"updated_at": "2014-11-17T02:23:06Z",
"from_gistbox": true,
"files": [
{
"filename": "plone-buttons-to-bootsrap2-buttons.xml",
"content": "<xsl:template match=\"//input[@type[contains(., 'submit') or contains(., 'button')]]\">\n<input>\n<xsl:copy-of select=\"attribute::*[not(name()='class')]\" />\n<xsl:attribute name=\"class\"><xsl:value-of select=\"@class\" /> btn\n<xsl:if test=\"@name[contains(., 'delete') or contains(., 'Remove')]\">btn-danger</xsl:if>\n<xsl:if test=\"@name[contains(., 'save') or contains(., 'Save') or contains(., 'RenameAll')]\">btn-primary</xsl:if>\n</xsl:attribute>\n</input>\n</xsl:template>",
"unique_id": "52d1e53e56348d4e",
"created_at": "2014-11-17T02:23:06Z",
"updated_at": "2014-11-17T02:23:06Z",
"from_gistbox": true
}
