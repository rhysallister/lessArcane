"from_gistbox": true,
"files": [
{
"filename": "li-span-menu-transform.xml",
"content": "<!--\nThe source theme has the following structure\n\n<nav class=\"top-nav\">\n<div class=\"shell\">\n\	\	\	\	<a href=\"#\" class=\"nav-btn\">HOMEPAGE<span></span></a>\n\	\	\	\	<span class=\"top-nav-shadow\"></span>\n\	\	\	\	<ul> <li class=\"active first\"><span><a href=\"#\">home</a></span></li>\n\	\	\	\	<li><span><a href=\"#\">services</a></span></li>\n...\n\	\	\	\	<li class=\"last\"><span><a href=\"#\">contacts</a></span></li>\n\	\	\	\	</ul>\n</div>\n</nav>\n-->\n\n<replace css:theme-children=\"nav.top-nav ul\">\n<xsl:for-each css:select=\"#portal-globalnav li\">\n<li><span><xsl:copy-of css:select=\"a\"/></span></li>\n</xsl:for-each>\n</replace>\n",
"unique_id": "6328bd7f626fdbbb",
"created_at": "2014-11-13T20:05:26Z",
"updated_at": "2014-11-13T20:05:26Z",
"from_gistbox": true
}
],
"created_by": {
"id": 32685,
"email": "bob@blahmail.com"
